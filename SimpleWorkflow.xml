<!-- This file tells .NET how to build the project -->
<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <!-- Use .NET 8 -->
    <TargetFramework>net8.0</TargetFramework>
    <!-- Allow null checks for safety -->
    <Nullable>enable</Nullable>
    <!-- Automatically include common C# features -->
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
</Project>